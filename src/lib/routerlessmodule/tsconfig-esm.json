{
  "extends": "./tsconfig-build.json",
  "compilerOptions": {
    "target": "es5",
    "outDir": "../../../dist/routerlessmodule/es5",
    "declaration": false,
    "removeComments": true
  },
  "files": ["routerless.module.ts"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableSummariesForJit": false,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "angulartics2/routerlessmodule"
  }
}
